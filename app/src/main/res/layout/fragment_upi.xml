<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".debitCard">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="20dp"
        android:fontFamily="@font/rubik_medium"
        android:text="  UPI"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:alpha="0.5"
        android:fontFamily="@font/rubik"
        android:lineHeight="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="10dp"
        android:text="Select a payment option to proceed with the payment"
        android:textSize="15sp" />

    <View
        android:id="@+id/outerbox"
        android:layout_width="370dp"
        android:layout_height="2.6dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="10dp"
        android:background="#E0C097"
        android:layout_margin="105dp"
        android:lineHeight="20dp"/>

    <EditText
        android:id="@+id/UPIid"
        android:layout_width="340dp"
        android:layout_height="49dp"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        android:layout_marginRight="35dp"
        android:hint="UPI ID"

        android:inputType="number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upib1"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="360dp"
        android:layout_marginRight="15sp"
        android:background="@drawable/corners_10"
        android:backgroundTint="#B85C38"
        android:text="Proceed to pay"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

</FrameLayout>