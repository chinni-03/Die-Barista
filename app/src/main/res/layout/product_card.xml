<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="190dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/corner_16"
    android:backgroundTint="#FFF"
    android:padding="15dp">

    <ImageView
        android:id="@+id/prodImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_espresso" />

    <TextView
        android:id="@+id/prodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/rubik_medium"
        android:text="Espresso"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/prodPrice"
        app:layout_constraintStart_toStartOf="@+id/prodImage"
        app:layout_constraintTop_toBottomOf="@+id/prodImage" />

    <TextView
        android:id="@+id/prodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_medium"
        android:text="â‚¹ 35"
        android:textColor="#7AA874"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/prodImage"
        app:layout_constraintTop_toTopOf="@+id/prodName" />
</androidx.constraintlayout.widget.ConstraintLayout>